@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Can'o'";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 text-primary mb-4">Welcome to Canoe Sharing System</h1>
            <p class="lead mb-5">Please choose your account type to continue</p>

            <div class="d-grid gap-3 col-md-6 mx-auto">
                <a href="/Login" class="btn btn-primary btn-lg">User Login</a>
                <a href="/StoreLogin" class="btn btn-secondary btn-lg">Store Login</a>
            </div>

            <div class="mt-5">
                <p class="text-muted">Don't have an account?</p>
                <div class="d-flex gap-2 justify-content-center">
                    <a href="/Register" class="btn btn-outline-primary">Register as User</a>
                    <a href="/StoreRegister" class="btn btn-outline-secondary">Register as Store</a>
                </div>
            </div>
        </div>
    </div>
</div>