@page
@model AddListingModel
@{
    ViewData["Title"] = "Add New Listing";
}

<div class="container py-5">
    <h2>Add New Listing</h2>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Model Name</label>
            <input asp-for="NewListing.ModelName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Make</label>
            <input asp-for="NewListing.Make" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="NewListing.Description" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="NewListing.Location" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input asp-for="NewListing.AvailabilityStartDate" type="date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">End Date</label>
            <input asp-for="NewListing.AvailabilityEndDate" type="date" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Create Listing</button>
    </form>
</div>