@page
@model EditListingModel
@{
    ViewData["Title"] = "Edit Listing";
}

<div class="container py-5">
    <h2>Edit Listing</h2>

    <form method="post">
        <input type="hidden" asp-for="Listing.ListingID" />

        <div class="mb-3">
            <label class="form-label">Model Name</label>
            <input asp-for="Listing.ModelName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Make</label>
            <input asp-for="Listing.Make" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Listing.Description" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Listing.Location" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input asp-for="Listing.AvailabilityStartDate" type="date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">End Date</label>
            <input asp-for="Listing.AvailabilityEndDate" type="date" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/ManageListings" class="btn btn-secondary">Cancel</a>
    </form>
</div>